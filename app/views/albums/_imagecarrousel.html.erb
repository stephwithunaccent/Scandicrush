
<!-- MON CODE qui enlarge quand tu cliques sur une photo-->
<div class="container">
  <div class="gallery">
   <% @album.photos.each do |photo| %>
   <!---           <div class="item active"> -->
    <div class="gallery-img">
    <a href="<%= cl_image_path photo.photo.path %>" class="swipebox" >
      <%= cl_image_tag photo.photo.path %>
    </div>
    <% end %>
  </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
<div class="gallery">
   <% @album.photos.each do |photo| %>
